<?xml version="1.0" encoding="utf-8"?>
<litepal>
    <!--设定数据库的名字-->
    <dbname value="cool_weather"></dbname>

    <!--设定数据库的版本号[需要纯数字]-->
    <version value="1"></version>

    <!--用于设定所有的映射模型-->
    <list>
        <mapping class="com.example.asus.weatherassistant.db.City"></mapping>
        <mapping class="com.example.asus.weatherassistant.db.Province"></mapping>
        <mapping class="com.example.asus.weatherassistant.db.Country"></mapping>
    </list>
</litepal>